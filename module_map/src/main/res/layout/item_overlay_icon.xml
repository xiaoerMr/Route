<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/overlayIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toTopOf="@+id/overlayIconTitle"
        app:layout_constraintEnd_toEndOf="@+id/overlayIconTitle"
        app:layout_constraintStart_toStartOf="@+id/overlayIconTitle"
        app:srcCompat="@drawable/ic_cool" />

    <TextView
        android:id="@+id/overlayIconTitle"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="24dp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="overlayIconTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>